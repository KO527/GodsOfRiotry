<span ng-switch = 'suggested_piece.id'>
	<span ng-switch-when = '{{suggested_piece.id}}'>
		<% for suggested_piece in @possible_match_suggested_tops %>
			<li data-ng-keydown = 'manualToggle(e)' id = 'suggested_top_<%= suggested_piece.id%>' class = 'possible_pieces'>
				<%= link_to(content_tag(:a, '', remote: true, controller: PossibleMatches, action: "show", id: @visible_gor_clothing.suggested_piece, onclick = "return false;"),
					image_tag(ng-src = "{{suggested_piece.image}}"), controller: Gor_Clothing, action: "detail", id: suggested_piece.id %>
					<details ng-bind-html = 'renderHtml(suggested_piece.price)' class = 'piece_price'></details>
					<details ng-bind-html = 'renderHtml(suggested_piece.price)' class = 'piece_description'></details>
			</li>
		<%end%>
	</span>
</span>