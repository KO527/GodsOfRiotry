<span ng-switch = 'bottom.id'>
	<% for gor_clothing in @possible_match_extra_bottoms %>
		<span ng-switch-when = '{{bottom.id}}'>
			<li id = 'currently_visible_extra_bottom' class='non_suggested_bottom_<%= gor_clothing.id %>' class = 'possible_pieces' focus-image>
				<%= link_to(content_tag(:a, '', remote: true, controller: PossibleMatches, action: "show", id: @visible_gor_clothing.contemplated_piece, onclick = "return false;"), image_tag(ng-src = "{{bottomInPlay.image}}"), controller: Gor_Clothing, action: "detail", id: gor_clothing.id%>
				<details ng-bind-html = 'renderHtml(bottomInPlay.price)' class = 'piece_price'></details>
				<details ng-bind-html = 'renderHtml(bottomInPlay.description)' class = 'piece_description'></details>
			</li>
		</span>
	<%end%>
</span>