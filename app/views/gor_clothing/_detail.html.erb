<% content_for :head do %>
     <%= javascript_include_tag 'admin' %>
     <%= javascript_include_tag 'prototype' %>
     <%= javascript_include_tag 'scriptaculous' %>
<%end%>

<div class = 'merchandise_nav'>
	<% if current_user.gender == :male %>
	<%= link_to 'Next', @gor_clothing_next %>
	<%= link_to 'Previous', @gor_clothing_previous %>
	<% if current_user.gender == :female %>
	<%= link_to 'Next', @gor_clothing_next %>
	<%= link_to 'Previous', @gor_clothing_previous %>
</div>
<section id = 'main-content'>
	<div class = 'detail_images'><%= render 'images/_images' %></div>
	<div class = 'description'>
		<h6 class = 'cloth_name'><%= @gor_clothing.name %></h6>
		<span><%= @gor_clothing.description %></span>
		<span><%= @gor_clothing.price %></span>
		<span><%= @gor_clothing.size %></span>
		<span><%= @gor_clothing.colors_available %></span>
	</div>
	<div class = 'possible_matches'>
 		<%= render 'possible_matches/index' %>
	</div> 
</section>